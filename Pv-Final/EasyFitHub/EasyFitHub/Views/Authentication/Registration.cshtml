@using EasyFitHub.Models.Account
@model User
@*
    AUTHOR: Francisco Silva
    View para o registro de contas
*@
<head>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/fontsource-inter@4">
    <link rel="stylesheet" href="~/css/Registration.css" />
</head>

@{
    ViewBag.Title = "Registration";
}

<body>
    <div class="hero">
        <div class="form-box">
            <div class="conteudo">
                <h1>New Here?</h1>
                <h4>Create a new account</h4>
            </div>

            @using (Html.BeginForm("RegisterUser", "Authentication", FormMethod.Post))
            {
                @Html.AntiForgeryToken()
                
                <div class="form-group">
                    <input asp-for="Email" class="form-control" placeholder="Email"/>
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input asp-for="Password" type="password" class="form-control" placeholder="Password" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input asp-for="ConfirmPassword" type="password" class="form-control" placeholder="Confirm Password" />
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input asp-for="UserName" class="form-control" placeholder="User Name" />
                    <span asp-validation-for="UserName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input asp-for="Name" class="form-control" placeholder="Name" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input asp-for="Surname" class="form-control" placeholder="Surname" />
                    <span asp-validation-for="Surname" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input asp-for="BirthDate" type="date" class="form-control" placeholder="BirthDate" />
                    <span asp-validation-for="BirthDate" class="text-danger"></span>
                </div>
                
                <div class="form-button">
                    <button type="submit" class="btn btn-primary">Sign Up</button>
                </div>
            }

            <div class="form-link">
                <a href="@Url.Action("Index", "Authentication")" tabindex="4">Im already a member</a><br />
            </div>

            <div class="form-link">
                <a href="@Url.Action("Registration", "Authentication", new { accountType = "manager" })" tabindex="4">Create a gym account</a><br />
            </div>
        </div>
    </div>
</body>

