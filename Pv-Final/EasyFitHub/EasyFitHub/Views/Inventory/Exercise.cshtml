@model EasyFitHub.Models.Inventory.Exercise
@{
    ViewData["Title"] = "Exercise";
}
@*
    Author: Francisco Silva
    View destinada à visualização de um Exercise
*@
<head>
    <meta charset="utf-8" />
    <link rel="stylesheet" href="~/css/ItemEdit.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/fontsource-inter@4">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Istok+Web&display=swap">
    <script src="~/js/Items.js"></script>
</head>
@section Header {
    <div class="navbar2">
        <a href="@Url.Action("Machine", "Inventory", new { gymId = TempData["GymId"], machineId = Model.MachineId})"><img class="img2" src="/lib/imagens/Arrow.PNG" /></a>
        <p class="gymClients">Exercise</p>
    </div>
}
<body>
    <p class="title bigger">@Model.Name  -  Exercise</p>

    <div class="content">
        @if (Model != null)
        {
            @if (Model.Image != null && Model.Image.Path != null)
            {
                <img class="itemImage" src="@Model.Image.Path" />
            }
            else
            {
                <img class="itemImage" src="/lib/imagens/SliderV3.png" />
            }
            <hr class="gray-hr">
            <br />

            <br />
            <div class="items">
                <input readonly="readonly" type="text" placeholder="@Model.Name" class="textBox" />

                @{
                    var count = @Model.Description.Length;
                    string size = double.Floor(count / 2.5) + "px";

                    <textarea readonly="readonly" placeholder="@Model.Description" class="textArea" style="height:@size;"></textarea>
                }

                <br />
                <hr class="gray-hr">
                <br />
            </div>
        }
        else
        {
            <p>This exercise doesn't exist.</p>
        }
    </div>
</body>

@if (TempData["ResultMessage"] != null)
{
    <script>
        window.onload = function () {
            alert('@TempData["ResultMessage"]');
        };
    </script>
}

